<Page x:Class="AmbulanceApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AmbulanceApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnCall" Click="btnCall_Click" Content="Вызовы" 
                    Margin="20" Height="200" Width="300" 
                    FontSize="50" FontWeight="Bold"/>
            <Button Name="btnEmpl" Click="btnEmpl_Click" Content="Сотрудники" 
                    Margin="20" Height="200" Width="350" 
                    FontSize="50" FontWeight="Bold"/>
            <Button Name="btnMachine" Click="btnMachine_Click" Content="Машины" 
                    Margin="20" Height="200" Width="300"  
                    FontSize="50" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
